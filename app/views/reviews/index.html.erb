<div class="max-w-6xl mx-auto p-8">
  <h1 class="text-6xl font-bold mb-10 text-center">Reviews Dashboard</h1>

  <%= render 'nps_dashboard' %>

  <%= render 'filters' %>

  <%= turbo_frame_tag "reviews" do %>
  <% if params[:ratings].present? || params[:channels].present? || params[:company_name].present? || params[:start_date].present? || params[:end_date].present? || params[:query].present? %>
    <div class="mb-4 flex flex-wrap gap-2 items-center">
      <span class="text-sm font-semibold text-gray-600">Active Filters:</span>

      <% if params[:ratings].present? %>
        <% params[:ratings].each do |rating| %>
          <% new_ratings = params[:ratings].to_a - [rating] %>
          <%= link_to reviews_path(params.to_unsafe_h.except(:ratings).merge(ratings: new_ratings).compact),
              class: "inline-flex items-center gap-1 bg-indigo-300 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-indigo-400 transition",
              data: { turbo_frame: "reviews", turbo_action: "advance" } do %>
            <span><%= rating_stars(rating.to_i) %></span>
            <span>&times;</span>
          <% end %>
        <% end %>
      <% end %>

      <% if params[:channels].present? %>
        <% params[:channels].each do |channel| %>
          <% new_channels = params[:channels].to_a - [channel] %>
          <%= link_to reviews_path(params.to_unsafe_h.except(:channels).merge(channels: new_channels).compact),
              class: "inline-flex items-center gap-1 bg-indigo-300 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-indigo-400 transition",
              data: { turbo_frame: "reviews", turbo_action: "advance" } do %>
            <span><%= channel %></span>
            <span>&times;</span>
          <% end %>
        <% end %>
      <% end %>

      <% if params[:company_name].present? %>
        <%= link_to reviews_path(params.to_unsafe_h.except(:company_name)),
            class: "inline-flex items-center gap-1 bg-indigo-300 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-indigo-400 transition",
            data: { turbo_frame: "reviews", turbo_action: "advance" } do %>
          <span>Company: <%= params[:company_name] %></span>
          <span>&times;</span>
        <% end %>
      <% end %>

      <% if params[:start_date].present? || params[:end_date].present? %>
        <%= link_to reviews_path(params.to_unsafe_h.except(:start_date, :end_date)),
            class: "inline-flex items-center gap-1 bg-indigo-300 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-indigo-400 transition",
            data: { turbo_frame: "reviews", turbo_action: "advance" } do %>
          <span>Date: <%= params[:start_date] || '...' %> to <%= params[:end_date] || '...' %></span>
          <span>&times;</span>
        <% end %>
      <% end %>

      <% if params[:query].present? %>
        <%= link_to reviews_path(params.to_unsafe_h.except(:query)),
            class: "inline-flex items-center gap-1 bg-indigo-300 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-indigo-400 transition",
            data: { turbo_frame: "reviews", turbo_action: "advance" } do %>
          <span>Search: <%= params[:query] %></span>
          <span>&times;</span>
        <% end %>
      <% end %>

      <%= link_to "Clear All", reviews_path,
          class: "inline-flex items-center gap-1 bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-sm font-medium hover:bg-gray-300 transition",
          data: { turbo_frame: "reviews", turbo_action: "advance" } %>
    </div>
  <% end %>
  <% if @reviews.any? %>
    <div class="mb-4 text-end text-sm text-gray-600">
      Showing <span class="font-semibold"><%= @pagy.from %></span> to <span class="font-semibold"><%= @pagy.to %></span> of <span class="font-semibold"><%= @pagy.count %></span> reviews
    </div>
    <div class="space-y-4">
      <% @reviews.each do |review| %>
        <div class="border border-gray-200 rounded-lg p-6 bg-white shadow-sm">
          <div class="flex justify-between items-start mb-2">
            <h3 class="text-lg font-semibold text-gray-800">
              <%= review.company_name %>
            </h3>
            <span class="text-sm"><%= rating_stars(review.rating) %></span>
          </div>
          <div class="flex gap-4 text-sm text-gray-500 mb-3">
            <span><%= review.channel %></span>
            <span><%= formatted_review_date(review.review_date) %></span>
          </div>
          <p class="text-gray-700 text-sm"><%= review.description %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">No reviews found</h3>
      <p class="text-gray-600 mb-4">
        <% if params[:ratings].present? || params[:channels].present? || params[:company_name].present? || params[:start_date].present? || params[:end_date].present? || params[:query].present? %>
          Try adjusting your filters to see more results.
        <% else %>
          There are no reviews to display at this time.
        <% end %>
      </p>
      <% if params[:ratings].present? || params[:channels].present? || params[:company_name].present? || params[:start_date].present? || params[:end_date].present? || params[:query].present? %>
        <%= link_to "Clear all filters", reviews_path,
            class: "inline-flex items-center gap-2 bg-indigo-300 text-white px-4 py-2 rounded-lg hover:bg-indigo-400 transition font-medium",
            data: { turbo_frame: "reviews", turbo_action: "advance" } %>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6 flex justify-center">
    <%== pagy_nav(@pagy, pagy_id: 'pagy-nav', link_extra: 'class="pagy"') %>
  </div>
  <% end %>
</div>