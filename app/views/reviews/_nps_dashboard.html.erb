<% if @global_nps %>
  <div class="bg-white rounded-lg p-8 mb-8 shadow-sm">
    <div class="text-center mb-8">
      <h2 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-3">Yesterday's Net Promoter Score</h2>
      <div class="flex items-center justify-center gap-4">
        <div class="text-7xl font-bold <%= @global_nps.score >= 50 ? 'text-green-300' : @global_nps.score >= 0 ? 'text-blue-300' : 'text-red-300' %>">
          <%= @global_nps.score > 0 ? '+' : '' %><%= @global_nps.score %>
        </div>
      </div>
      <p class="text-sm text-gray-600 mt-3">
        Based on <span class="font-semibold"><%= @global_nps.promoter_count + @global_nps.passive_count + @global_nps.detractor_count %></span> reviews from <%= Date.yesterday.strftime('%B %d, %Y') %>
      </p>
    </div>

    <!-- nps -->
    <% total = @global_nps.promoter_count + @global_nps.passive_count + @global_nps.detractor_count %>
    <% if total > 0 %>
      <% promoter = (@global_nps.promoter_count.to_f / total * 100).round(1) %>
      <% passive = (@global_nps.passive_count.to_f / total * 100).round(1) %>
      <% detractor = (@global_nps.detractor_count.to_f / total * 100).round(1) %>

      <div class="mb-6">
        <div class="flex h-8 rounded-full overflow-hidden shadow-inner">
          <div class="bg-green-300 flex items-center justify-center text-white text-xs font-semibold"
               style="width: <%= promoter %>%"
               title="Promoters: <%= promoter %>%">
            <% if promoter > 10 %><%= promoter.to_i %>%<% end %>
          </div>
          <div class="bg-yellow-300 flex items-center justify-center text-gray-800 text-xs font-semibold"
               style="width: <%= passive %>%"
               title="Passives: <%= passive %>%">
            <% if passive > 10 %><%= passive.to_i %>%<% end %>
          </div>
          <div class="bg-red-300 flex items-center justify-center text-white text-xs font-semibold"
               style="width: <%= detractor %>%"
               title="Detractors: <%= detractor %>%">
            <% if detractor > 10 %><%= detractor.to_i %>%<% end %>
          </div>
        </div>
      </div>

      <!-- cards -->
      <div class="grid grid-cols-3 gap-4 mb-8">
        <!-- promoters -->
        <div class="bg-green-100 rounded-lg p-4">
          <div class="flex items-center justify-end mb-2">
            <span class="text-xs self-end font-semibold text-green-700 bg-green-100 px-2 py-1 rounded">Promoters</span>
          </div>
          <div class="text-3xl font-bold text-green-600 mb-1"><%= @global_nps.promoter_count %></div>
          <div class="text-sm text-gray-600"><%= promoter %>% of reviews</div>
          <div class="text-xs text-gray-500 mt-2">5-star ratings</div>
        </div>

        <!-- passives -->
        <div class="bg-yellow-100 rounded-lg p-4">
          <div class="flex items-center justify-end mb-2">
            <span class="text-xs font-semibold text-yellow-700 bg-yellow-100 px-2 py-1 rounded">Passives</span>
          </div>
          <div class="text-3xl font-bold text-yellow-600 mb-1"><%= @global_nps.passive_count %></div>
          <div class="text-sm text-gray-600"><%= passive %>% of reviews</div>
          <div class="text-xs text-gray-500 mt-2">4-star ratings</div>
        </div>

        <!-- detractors -->
        <div class="bg-red-100 rounded-lg p-4">
          <div class="flex items-center justify-end mb-2">
            <span class="text-xs font-semibold text-red-700 bg-red-100 px-2 py-1 rounded">Detractors</span>
          </div>
          <div class="text-3xl font-bold text-red-600 mb-1"><%= @global_nps.detractor_count %></div>
          <div class="text-sm text-gray-600"><%= detractor %>% of reviews</div>
          <div class="text-xs text-gray-500 mt-2">1-3 star ratings</div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
    <p class="text-yellow-800 text-center">
      <span class="font-semibold">No NPS data available for yesterday.</span><br>
      <span class="text-sm">Run the daily calculation job to generate scores.</span>
    </p>
  </div>
<% end %>
