<% if @global_nps %>
  <div class="bg-gray-100 rounded-lg p-8 mb-8 shadow-sm">
    <div class="text-center mb-8">
      <h2 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-3">Yesterday's Net Promoter Score</h2>
      <div class="flex items-center justify-center gap-4">
        <div class="text-7xl font-bold <%= @global_nps.score >= 50 ? 'text-green-600' : @global_nps.score >= 0 ? 'text-blue-600' : 'text-red-600' %>">
          <%= @global_nps.score > 0 ? '+' : '' %><%= @global_nps.score %>
        </div>
      </div>
      <p class="text-sm text-gray-600 mt-3">
        Based on <span class="font-semibold"><%= @global_nps.promoter_count + @global_nps.passive_count + @global_nps.detractor_count %></span> reviews from <%= Date.yesterday.strftime('%B %d, %Y') %>
      </p>
    </div>

    <!-- nps -->
    <% total = @global_nps.promoter_count + @global_nps.passive_count + @global_nps.detractor_count %>
    <% if total > 0 %>
      <% promoter = (@global_nps.promoter_count.to_f / total * 100).round(1) %>
      <% passive = (@global_nps.passive_count.to_f / total * 100).round(1) %>
      <% detractor = (@global_nps.detractor_count.to_f / total * 100).round(1) %>

      <div class="mb-6">
        <div class="flex h-8 rounded-full overflow-hidden shadow-inner">
          <div class="bg-green-500 flex items-center justify-center text-white text-xs font-semibold"
               style="width: <%= promoter %>%"
               title="Promoters: <%= promoter %>%">
            <% if promoter > 10 %><%= promoter.to_i %>%<% end %>
          </div>
          <div class="bg-yellow-400 flex items-center justify-center text-gray-800 text-xs font-semibold"
               style="width: <%= passive %>%"
               title="Passives: <%= passive %>%">
            <% if passive > 10 %><%= passive.to_i %>%<% end %>
          </div>
          <div class="bg-red-500 flex items-center justify-center text-white text-xs font-semibold"
               style="width: <%= detractor %>%"
               title="Detractors: <%= detractor %>%">
            <% if detractor > 10 %><%= detractor.to_i %>%<% end %>
          </div>
        </div>
      </div>

      <!-- cards -->
      <div class="grid grid-cols-3 gap-4 mb-8">
        <!-- promoters -->
        <div class="bg-green-100 rounded-lg p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-2xl">ğŸ˜Š</span>
            <span class="text-xs font-semibold text-green-700 bg-green-100 px-2 py-1 rounded">Promoters</span>
          </div>
          <div class="text-3xl font-bold text-green-600 mb-1"><%= @global_nps.promoter_count %></div>
          <div class="text-sm text-gray-600"><%= promoter_pct %>% of reviews</div>
          <div class="text-xs text-gray-500 mt-2">5-star ratings</div>
        </div>

        <!-- passives -->
        <div class="bg-yellow-100 rounded-lg p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-2xl">ğŸ˜</span>
            <span class="text-xs font-semibold text-yellow-700 bg-yellow-100 px-2 py-1 rounded">Passives</span>
          </div>Company Breakdown
          <div class="text-3xl font-bold text-yellow-600 mb-1"><%= @global_nps.passive_count %></div>
          <div class="text-sm text-gray-600"><%= passive_pct %>% of reviews</div>
          <div class="text-xs text-gray-500 mt-2">4-star ratings</div>
        </div>

        <!-- detractors -->
        <div class="bg-red-100 rounded-lg p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-2xl">ğŸ˜</span>
            <span class="text-xs font-semibold text-red-700 bg-red-100 px-2 py-1 rounded">Detractors</span>
          </div>
          <div class="text-3xl font-bold text-red-600 mb-1"><%= @global_nps.detractor_count %></div>
          <div class="text-sm text-gray-600"><%= detractor_pct %>% of reviews</div>
          <div class="text-xs text-gray-500 mt-2">1-3 star ratings</div>
        </div>
      </div>
    <% end %>

    <!-- companies -->
    <% if @company_nps.present? %>
      <div class="bg-gray-200 rounded-lg p-6 border border-gray-200" style="box-shadow: inset 0 6px 12px -8px rgba(0,0,0,0.25), inset 0 -6px 12px -8px rgba(255,255,255,1);">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Top Companies by NPS</h3>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-600">
                <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Company</th>
                <th class="text-center py-3 px-4 text-sm font-semibold text-gray-700">Score</th>
                <th class="text-center py-3 px-4 text-sm font-semibold text-gray-700">Reviews</th>
                <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Breakdown</th>
              </tr>
            </thead>
            <tbody>
              <% @company_nps.each do |nps| %>
                <% company_total = nps.promoter_count + nps.passive_count + nps.detractor_count %>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="py-3 px-4 text-sm font-medium text-gray-900"><%= nps.company %></td>
                  <td class="py-3 px-4 text-center">
                    <span class="inline-block px-3 py-1 rounded-full text-sm font-bold <%= nps.score >= 50 ? 'bg-green-100 text-green-700' : nps.score >= 0 ? 'bg-blue-100 text-blue-700' : 'bg-red-100 text-red-700' %>">
                      <%= nps.score > 0 ? '+' : '' %><%= nps.score %>
                    </span>
                  </td>
                  <td class="py-3 px-4 text-center text-sm text-gray-600"><%= company_total %></td>
                  <td class="py-3 px-4">
                    <div class="flex gap-3 text-xs">
                      <span class="text-green-600">ğŸ˜Š <%= nps.promoter_count %></span>
                      <span class="text-yellow-600">ğŸ˜ <%= nps.passive_count %></span>
                      <span class="text-red-600">ğŸ˜ <%= nps.detractor_count %></span>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
    <p class="text-yellow-800 text-center">
      <span class="font-semibold">No NPS data available for yesterday.</span><br>
      <span class="text-sm">Run the daily calculation job to generate scores.</span>
    </p>
  </div>
<% end %>
